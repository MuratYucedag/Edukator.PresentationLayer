@model List<Edukator.EntityLayer.Concrete.SocialMedia>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Sosya Medya Hesapları</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Başlık</th>
                    <th scope="col">Sil</th>
                    <th scope="col">Güncelle</th>
                    <th scope="col">Siteye Git</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <th scope="row">@item.SocialMediaId</th>
                    <td>@item.SocialMediaName</td>
                    <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger">Sil</a></td>
                    <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-success">Güncelle</a></td>
                    <td><a href="#" class="btn btn-outline-dark">Siteye Git</a></td>
                </tr>
                }
            </tbody>
        </table>
        <a href="#" class="btn btn-outline-primary">Yeni Sosyal Medya Girişi</a>
    </div>
</div>