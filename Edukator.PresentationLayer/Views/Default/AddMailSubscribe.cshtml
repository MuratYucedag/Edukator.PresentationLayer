@model Edukator.EntityLayer.Concrete.MailSubscribe
<section class="w3l-project" id="subscribe">
    <div class="container-fluid mx-lg-0">
        <div class="row">
            <div class="col-lg-6 bottom-info">
                <div class="project-header-section text-left">
                    <h5 class="title-subw3hny text-left mb-1">Bize katılın</h5>
                    <h3 class="title-w3l">
                        Kampanyalardan ve İndirimlerden<span class="inn-text"> Haberdar Olun!</span>
                    </h3>
                    <p class="mt-3 pr-lg-5">30 Saniyede mail bültenimize abone olup fırsatları mail olarak alabilirsiniz, spam mail göndermiyoruz!</p>

                    <form asp-action="AddMailSubscribe" asp-controller="Default" class="subscribe mt-5" method="post">
                        <input type="email" asp-for="Mail" placeholder="Mail Adresinizi Girin" required="">
                        <button class="btn btn-style btn-primary">Bültene Abone Ol</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-6 subcribe-img">
            </div>
        </div>
    </div>
</section>